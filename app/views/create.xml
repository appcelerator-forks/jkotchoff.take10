<Alloy>
	<Window id="createWindow">
	  <View class="container">
      <View id="imageSelection" class="horizontal top_offset">
        <Button onClick="pickImage" title="Add an Image"/>
      </View>

      <View class="horizontal" left="7">
        <ImageView id="image_1"/>
        <ImageView id="image_2"/>
        <ImageView id="image_3"/>
        <ImageView id="image_4"/>
        <ImageView id="image_5"/>
      </View>
      <View class="horizontal" left="7">
        <ImageView id="image_6"/>
        <ImageView id="image_7"/>
        <ImageView id="image_8"/>
        <ImageView id="image_9"/>
        <ImageView id="image_10"/>
      </View>

      <View class="top_offset">
        <Label class="lbl">Deca name:</Label>
        <TextField id="decaName"/>
      </View>

      <Button id="createBtn" class="top_offset" onClick="saveDeca" title="Create Deca!"/>

    </View>
	</Window>
</Alloy>